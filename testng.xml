<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="WebDriverTask">
    <test name="HealthTests">
        <groups>
            <run>
                <include name="health tests"/>
            </run>
        </groups>
        <classes>
            <class name="com.epam.webdriver.LoginPageProtonMailTests"/>
            <class name="com.epam.webdriver.EmailDeliveryTests"/>
        </classes>
    </test>
    <test name="TaskTests">
        <groups>
            <run>
                <include name="task tests"/>
            </run>
        </groups>
        <classes>
            <class name="com.epam.webdriver.LoginPageProtonMailTests"/>
            <class name="com.epam.webdriver.EmailDeliveryTests"/>
        </classes>
    </test>
</suite>
